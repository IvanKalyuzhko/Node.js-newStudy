    <% if (username.toLowerCase() == 'john') { %>
        <ul>
            <% hobbies.forEach((el)=> { %>,<!--тут використовуєм цикл для виведення хоббі користувача на сторінку -->
                <li><%=el %></li>
            <%})%>
        </ul>
      <% } %>
</body>
</html>